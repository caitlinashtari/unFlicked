<h1>New Post</h1>

<%= render "layouts/errors", :object => @post %>

<%= form_for @post, html: { multipart: true } do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :content %>
  <%= f.text_field :content %>

  <%= f.file_field :asset %><br>

  <%= f.submit "Save", class: "btn" %>
<% end %>
